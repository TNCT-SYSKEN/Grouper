<div class="talk_page">
  <table class="talk_table">
    <tbody class="talk_tbody">
      <% @talks.each do |talk| %>
        <tr class="talk_user_name">
          <th colspan="3"><%= user_email(talk.user_id) %></th>
        </tr>
        <tr class="talk_body">
          <th class="user">
            <p><%= image_tag 'dummy.png', class: 'img-circle user-img', style: 'width: 50px; height: 50px;' %>
          </th>
          <th class="content">
            <p><%= talk.talk %></p>
          </th>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div id="talk_fin"></div>
  <div id="footer"></div>
  <div id="uid" style="display:none;"><%= current_user.id %></div>
  <div id="gid" style="display:none;"><%= @group.id %></div>
  <div class="row">
    <%= form_tag('new', remote: true, class: "foot", onSubmiti: "checkEmpty") do %>
    <div class="form-group">
      <div class="col-xs-2">
      <div class="btn btn-success"><span class="add-file">+</span></div>
    </div>
      <div class="col-xs-7 talk_message">
        <%= text_field_tag :talk, "", id: "text", class: "form-control" %>
      </div>
      <div class="col-xs-3">
      <%= submit_tag "送信", id: "send", class: "btn btn-primary" %>
    </div>
    </div>
  </div>
  <% end %>
  <div class="talk_bottom"></div>
  <script src="/talk.js"></script>
</div>
