<div class="talk_page">
  <table class="row talk">
    <tbody class="talk_tbody">
      <% @talks.each do |talk| %>
        <tr class="talk_body">
          <th class="user">
            <p><%= user_email(talk.user_id) %></p>
          </th>
          <th class="content">
            <p><%= talk.talk %></p>
          </th>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="talk_bottom"></div>
  <div id="uid" style="display:none;"><%= current_user.id %></div>
  <div id="gid" style="display:none;"><%= @group.id %></div>
  <%= form_tag('new', remote: true, class: "foot") do %>
    <div class="form-group">
    <div class="btn btn-success col-xs-2">追加</div>
    <div class="col-xs-8">
      <%= text_field_tag :talk, "", id: "text", class: "form-control" %>
    </div>
    <%= submit_tag "送信", id: "send", class: "btn btn-primary col-xs-2" %>
  </div>
<% end %>
  <span id="footer"></span>
  <script src="/talk.js"></script>
</div>
