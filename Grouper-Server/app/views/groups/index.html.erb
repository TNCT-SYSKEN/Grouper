<h1>参加しているグループ</h1>

<table>
  <thead>
    <tr>
      <th>No.</th>
      <th>ユーザ名</th>
      <th>詳細</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.user_id %></td>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td><%= link_to 'トーク', group %></td>
        <td><%= link_to '退会', group, method: :delete, data: { confirm: '本当に退会しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しくグループを作る', new_group_path %>
