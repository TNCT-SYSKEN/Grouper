    <div id="error_explanation" class="alert alert-danger">
      <% @group.errors.full_messages.each do |message| %>
        <%= message.delete("Name ") %>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <% if @group.errors.any? %>
    <div class="form-group has-error">
      <label>グループ名</label>
      <%= f.text_field :name, class: "form-control input-lg" %>
    </div>
  <% else %>
    <div class="form-group">
      <label>グループ名</label>
      <%= f.text_field :name, class: "form-control input-lg" %>
    </div>
  <% end %>
</div>
<div class="field">
  <div class="form-group">
    <label>詳細</label>
    <%= f.text_area :description, class: "form-control input-lg" %>
  </div>
</div>
<div class="field">
  <div class="form-group">
    <label>画像</label>
    <input type="file" id="exampleInputFile" style="display:none">
    <a id="btnUpload" class="easyui-linkbutton btn btn-lg btn-primary" data-options="iconCls:'icon-save'">選択</a>
  </div>
</div>
<div class="actions">
  <%= f.submit class:"btn btn-success btn-lg btn-block", value: "作成"%>
</div>
<% end %>
