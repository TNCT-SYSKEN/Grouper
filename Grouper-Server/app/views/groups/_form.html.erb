<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <% @group.errors.full_messages.each do |message| %>
        <%= message.delete("Name ") %>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <% if @group.errors.any? %>
      <div class="form-group has-error">
        <label>グループ名</label>
        <%= f.text_field :name, class: "form-control input-lg" %>
      </div>
    <% else %>
      <div class="form-group">
        <label>グループ名</label>
        <%= f.text_field :name, class: "form-control input-lg" %>
      </div>
    <% end %>
  </div>
  <div class="field">
    <div class="form-group">
      <label>詳細</label>
      <%= f.text_area :description, class: "form-control input-lg" %>
    </div>
  </div>
  <div class="actions">
    <%= submit_tag "作成", class:"btn btn-success btn-lg btn-block", value: "作成"%>
  </div>
<% end %>
<% if @group.id != nil %>
  <%= form_tag(new_image_group_path(@group.id), remote: true, multipart: true, class: "add-img-form") do %>
    <div class="field add-img-form">
      <label>画像</label><br>
      <div class="col-xs-6"><img src="" id="preview"></div>
      <%= file_field :upload, :file , id: "exampleInputFile", style: "display:none;" %>
      <div class="col-xs-3"><a id="btnUpload" class="easyui-linkbutton btn btn btn-primary" data-options="iconCls:'icon-save'">選択</a></div>
      <div class="col-xs-3"><%= submit_tag "更新", class: "btn btn-success btn" %></div>
    </div>
  <% end %>
<% end %>
