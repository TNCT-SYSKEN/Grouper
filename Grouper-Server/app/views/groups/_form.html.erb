<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "") %> つのエラーがあります。</h2>

      <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message.delete("Name ") %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="form-group">
      <label>グループ名</label>
      <%= f.text_field :name, class: "form-control input-lg"%>
    </div>
  </div>
  <div class="field">
    <div class="form-group">
      <label>詳細</label><br>
      <%= f.text_area :description, class: "form-control input-lg" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit class:"btn btn-primary btn-lg btn-block", value: "作成"%>
  </div>
<% end %>
