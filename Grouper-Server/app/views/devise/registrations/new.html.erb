<h2>ユーザ登録</h2>
<p>Welcome to <%= image_tag("grouper.png", style: 'height:60px') %></p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-block">
    <%= devise_error_messages! %>
    <label>メールアドレス</label>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>

    <label>パスワード <small>8文字以上</small></label>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>

    <label>パスワード再入力</label>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>
  <br>
  <p><%= f.submit "登録" , class: "btn btn-lg btn-block btn-success"%></p>
<% end %>

<a href="sign_in" class="btn btn-lg btn-block btn-default">ログイン</a>
