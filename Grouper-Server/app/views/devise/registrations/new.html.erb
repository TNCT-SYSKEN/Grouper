<h2>ユーザ登録</h2>
<p>Welcome to <%= image_tag("grouper.png", style: 'height:60px') %></p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-block">
    <div class="bg-warning">
    <%= devise_error_messages! %>
  </div>
    <label>メールアドレス</label>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>

    <label>パスワード <small>8文字以上</small></label>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>

    <label>パスワード再入力</label>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>

    <label>画像</label><br>
    <img src="" id="preview" style="display:none;" width="50px" height="50px">
    <input type="file" id="exampleInputFile" style="display:none">
    <a id="btnUpload" class="easyui-linkbutton btn btn-lg btn-primary" data-options="iconCls:'icon-save'">選択</a>
  </div>
  <br>
  <p><%= f.submit "登録" , class: "btn btn-lg btn-block btn-success"%></p>
<% end %>

<%= link_to 'ログイン', "/users/sign_in", class: "btn btn-lg btn-block btn-default" %>
