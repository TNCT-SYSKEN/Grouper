<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 選択時 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid
                android:color="#0080AB"
                />
        </shape>
    </item>
    <!-- 非選択時 -->
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid
                android:color="#0088CC"
                />
        </shape>
    </item>
</selector>